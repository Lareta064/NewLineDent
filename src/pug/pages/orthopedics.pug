extends ../layouts/layout.pug

block content
	include ../sections/_header
	main.main
		include ../sections/promos/_promo-orthopedics.pug
		section.steps.working-steps
			.container-special
				
				.left-decore-line
					p.txt-primary 04/07
					span.fake-line
					p Первичный прием
				
				.header-block
					h2.h2 Как пройдет наша<br>первая встреча?
				.steps-slider.swiper
					.swiper-wrapper
						.swiper-slide.step-card.step-card--work
							.step-card__top.flex
								span.step__num 01
								
							.step__img
								img(src='./img/steps/1.webp', srcset='./img/steps/1@2x.webp 2x' width='157' height='161' loading='lazy' alt='img')
							.step__title Сбор анамнеза
							
						
						.swiper-slide.step-card.step-card--work
							.step-card__top.flex
								span.step__num 02
								
							.step__img
								img(src='./img/steps/2.webp', srcset='./img/steps/2@2x.webp 2x' width='157' height='161' loading='lazy' alt='img')
							.step__title Осмотр
							
						
						.swiper-slide.step-card.step-card--work
							.step-card__top.flex
								span.step__num 03
								
							.step__img
								img(src='./img/steps/3.webp', srcset='./img/steps/3@2x.webp 2x' width='157' height='161' loading='lazy' alt='img')
							.step__title Фотопротокол
							
						
						.swiper-slide.step-card.step-card--work
							.step-card__top.flex
								span.step__num 04
								
							.step__img
								img(src='./img/steps/4.webp', srcset='./img/steps/4@2x.webp 2x' width='157' height='161' loading='lazy' alt='img')
							.step__title Компьютерная томография
						
					
					
					//slider nav
					.steps-slider-nav
						.steps-slider-pagination
						button.steps-slider-next.arrow-next
							svg.svg-rarr
								use(href='./img/sprite.svg#svg-rarr')
		include ../sections/implantation/_doctors.pug
		
		include ../sections/implantation/_before-after.pug
		
		
		include ../sections/implantation/_review
		include ../sections/_faq
	
	//FOOTER
	include ../sections/_footer

